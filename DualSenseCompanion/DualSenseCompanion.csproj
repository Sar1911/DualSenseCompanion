<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0-windows10.0.26100.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>Program</StartupObject>
    <SupportedOSPlatformVersion>7.0</SupportedOSPlatformVersion>
    <ApplicationIcon>icon_6Q2_icon.ico</ApplicationIcon>
    <PackageId>DualSenseCompanion</PackageId>
    <Title>DualSenseCompanion</Title>
    <Authors>Sar1911</Authors>
    <Company>Sar1911</Company>
    <Product>DualSenseCompanion</Product>
    <Description>The only app you'll need for PC gaming with the PS5 controller.</Description>
    <AssemblyName>DualSenseCompanion</AssemblyName>
    <RootNamespace>DualSenseCompanion</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="icon_6Q2_icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HidSharp" Version="2.1.0" />
    <PackageReference Include="Nefarius.Drivers.HidHide" Version="2.4.1" />
    <PackageReference Include="Nefarius.ViGEm.Client" Version="1.21.256" />
    <PackageReference Include="System.Management" Version="9.0.3" />
    <PackageReference Include="System.Reactive.Windows.Forms" Version="6.0.1" />
    <PackageReference Include="System.ServiceProcess.ServiceController" Version="9.0.3" />
  </ItemGroup>

  <ItemGroup>
    <None Update="DSToolsIcon.ico">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
